<%= render @article %> <!-- details coming from _article.html.erb partial -->

<h3>Comments</h3>
<div id="comments">
	<div style='border: 1px solid purple;'>
		<%= render @article.comments %>
		<!-- for each comment associated with article, there will be comments/_comment.html.erb partial generated-->
	</div>
</div>

<%= link_to 'new comment', new_article_comment_path(@article, :format => :js), :remote => true, :id => 'new_comment_link' %>

